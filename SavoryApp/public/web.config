<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <rewrite>
        <rules>
            <rule name="Redirect to Root" stopProcessing="true">
                <match url=".*" />
                <conditions>
                    <add input="{REQUEST_URI}" pattern="^/(.*)$" />
                </conditions>
                <action type="Redirect" url="/{C:1}" appendQueryString="true" redirectType="Permanent" />
            </rule>
        </rules>
    </rewrite>

    <staticContent>
      <!-- Configure MIME type for WOFF font files -->
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      
      <!-- Configure MIME type for WOFF2 font files -->
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
      
      <!-- Add additional MIME mappings for other file types as needed -->
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
    
  </system.webServer>
</configuration>